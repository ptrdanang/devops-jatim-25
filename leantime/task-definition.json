{
  "family": "lks-leantime-app",
  "taskRoleArn": "arn:aws:iam::471112773328:role/LabRole",
  "executionRoleArn": "arn:aws:iam::471112773328:role/LabRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1024",
  "memory": "2048",
  "volumes": [
    {
      "efsVolumeConfiguration": {
        "authorizationConfig": {
          "accessPointId": "fsap-0fe84c10c5dfada25",
          "iam": "DISABLED"
        },
        "fileSystemId": "fs-0afc88e3190b013c5",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      },
      "name": "public"
    },
    {
      "efsVolumeConfiguration": {
        "authorizationConfig": {
          "accessPointId": "fsap-083f478b1856d4f32",
          "iam": "DISABLED"
        },
        "fileSystemId": "fs-0afc88e3190b013c5",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      },
      "name": "user"
    },
    {
      "efsVolumeConfiguration": {
        "authorizationConfig": {
          "accessPointId": "fsap-0aa67f3ad1691ced1",
          "iam": "DISABLED"
        },
        "fileSystemId": "fs-0afc88e3190b013c5",
        "rootDirectory": "/",
        "transitEncryption": "ENABLED"
      },
      "name": "plug"
    }
  ],

  "placementConstraints": [],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "enableFaultInjection": false,

  "containerDefinitions": [
    {
      "name": "leantime",
      "image": "leantime/leantime:latest",
      "cpu": 0,
      "essential": true,
      "volumesFrom": [],
      "systemControls": [],

      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],

      "secrets": [
        { "name": "DB_HOST", "valueFrom": "/lks/db/host" },
        { "name": "DB_PORT", "valueFrom": "/lks/db/port" },
        { "name": "DB_NAME", "valueFrom": "/lks/db/name" },
        { "name": "DB_USERNAME", "valueFrom": "/lks/db/username" },
        { "name": "DB_PASSWORD", "valueFrom": "/lks/db/password" }
      ],

      "environment": [
        { "name": "APP_URL", "valueFrom": "http://lks-oss-lb-1522672891.us-east-1.elb.amazonaws.com" },
        { "name": "APP_PORT", "value": "8080" },
        { "name": "SITENAME", "value": "LKS Leantime" },
        { "name": "DEFAULT_TIMEZONE", "value": "Asia/Jakarta" }
      ],

      "mountPoints": [
        {
          "containerPath": "/var/www/html/public/userfiles",
          "readOnly": false,
          "sourceVolume": "public"
        },
        {
          "containerPath": "/var/www/html/userfiles",
          "readOnly": false,
          "sourceVolume": "user"
        },
        {
          "containerPath": "/var/www/html/app/Plugins",
          "readOnly": false,
          "sourceVolume": "plug"
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lks/leantime-app",
          "awslogs-region": "us-east-1",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}