{
  "family": "lks-leantime-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::471112773328:role/LabRole",
  "taskRoleArn": "arn:aws:iam::471112773328:role/LabRole",

  "volumes": [
    {
      "name": "leantime-data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0afc88e3190b013c5",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-017be09a7d3bb7aff",
          "iam": "ENABLED"
        }
      }
    }
  ],

  "containerDefinitions": [
    {
      "name": "leantime",
      "image": "leantime/leantime:latest",
      "essential": true,

      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],

      "environment": [
        { "name": "DB_CONNECTION", "value": "mysql" },
        {
          "name": "DB_HOST",
          "value": "lks-project-management-cluster.cluster-c7i8uumoqg9s.us-east-1.rds.amazonaws.com"
        },
        { "name": "DB_PORT", "value": "3306" },
        { "name": "DB_DATABASE", "value": "leantime_db" },
        { "name": "DB_USERNAME", "value": "admin" },
        { "name": "DB_PASSWORD", "value": "lksdanang" },

        {
          "name": "APP_URL",
          "value": "http://lks-oss-lb-1522672891.us-east-1.elb.amazonaws.com"
        },
        { "name": "APP_PORT", "value": "8080" },
        { "name": "DEFAULT_TIMEZONE", "value": "Asia/Jakarta" },
        { "name": "SITENAME", "value": "LKS Leantime" }
      ],

      "mountPoints": [
        {
          "sourceVolume": "leantime-data",
          "containerPath": "/var/www/html/userfiles",
          "readOnly": false
        },
        {
          "sourceVolume": "leantime-data",
          "containerPath": "/var/www/html/storage",
          "readOnly": false
        },
        {
          "sourceVolume": "leantime-data",
          "containerPath": "/var/www/html/app/plugins",
          "readOnly": false
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lks/leantime-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
