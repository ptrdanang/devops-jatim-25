{
  "family": "lks-leantime-app",
  "taskRoleArn": "arn:aws:iam::471112773328:role/LabRole",
  "executionRoleArn": "arn:aws:iam::471112773328:role/LabRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1024",
  "memory": "2048",
  "volumes": [],

  "placementConstraints": [],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "enableFaultInjection": false,

  "containerDefinitions": [
    {
      "name": "leantime",
      "image": "leantime/leantime:latest",
      "cpu": 0,
      "essential": true,
      "volumesFrom": [],
      "systemControls": [],

      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],

      "secrets": [
        { "name": "LEANTIME_DB_HOST", "valueFrom": "/lks/db/host" },
        { "name": "LEANTIME_DB_PORT", "valueFrom": "/lks/db/port" },
        { "name": "LEANTIME_DB_NAME", "valueFrom": "/lks/db/name" },
        { "name": "LEANTIME_DB_USER", "valueFrom": "/lks/db/username" },
        { "name": "LEANTIME_DB_PASS", "valueFrom": "/lks/db/password" }
      ],

      "environment": [
        { "name": "LEANTIME_URL", "value": "http://lks-project-management-cluster.cluster-c7i8uumoqg9s.us-east-1.rds.amazonaws.com" },
        { "name": "APP_PORT", "value": "8080" },
        { "name": "SITENAME", "value": "LKS Leantime" },
        { "name": "DEFAULT_TIMEZONE", "value": "Asia/Jakarta" },
        { "name": "PUID", "value": "1000" },
        { "name": "PGID", "value": "1000" }
      ],

      "mountPoints": [
        {
          "containerPath": "/var/www/html/public/userfiles",
          "readOnly": false,
          "sourceVolume": "public"
        },
        {
          "containerPath": "/var/www/html/userfiles",
          "readOnly": false,
          "sourceVolume": "user"
        },
        {
          "containerPath": "/var/www/html/app/plugins",
          "readOnly": false,
          "sourceVolume": "plugins"
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/lks/leantime-app",
          "awslogs-region": "us-east-1",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}